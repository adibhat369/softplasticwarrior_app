<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oceanmini"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/chal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="420dp"
                android:background="@drawable/roundbutton"
                android:text="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chal3_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal3" />

            <Button
                android:id="@+id/chal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/roundbutton"
                android:text="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chal1_star"
                android:layout_width="58dp"
                android:layout_height="0dp"
                android:layout_marginStart="156dp"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chal1" />

            <Button
                android:id="@+id/chal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/roundbutton"
                android:text="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chal2_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="107dp"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal2" />

            <Button
                android:id="@+id/chal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/roundbutton"
                android:text="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chal2" />

            <ImageView
                android:id="@+id/chal4_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="invisible"
                app:layout_constraintRight_toLeftOf="@id/gifImageView"
                app:layout_constraintTop_toBottomOf="@+id/chal4" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/turtlegif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/momseaturtle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/chal4" />

            <ImageView
                android:id="@+id/bagleft"
                android:layout_width="110dp"
                android:layout_height="87dp"
                android:layout_marginBottom="52dp"
                android:layout_marginStart="100dp"
                android:src="@drawable/bagleft"
                app:layout_constraintBottom_toTopOf="@+id/chal3"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/bagright"
                android:layout_width="64dp"
                android:layout_height="78dp"
                android:layout_marginEnd="65dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/bagright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cookie"
                android:layout_width="104dp"
                android:layout_height="64dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:rotation="225"
                android:src="@drawable/bottleleft"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                app:layout_constraintTop_toBottomOf="@+id/gifImageView2" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="127dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="75dp"
                android:layout_marginTop="25dp"
                android:rotation="210"
                android:src="@drawable/bottleright"
                app:layout_constraintBottom_toTopOf="@+id/gifImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_help"
                app:fabSize="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifImageView2"
                app:rippleColor="@color/colorPrimaryDark" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonvol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:src="@android:drawable/ic_lock_silent_mode"
                app:fabSize="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
                app:rippleColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/ground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chal4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="113dp"
                android:layout_height="105dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/bagright"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal3" />

            <TextView
                android:id="@+id/point1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="62dp"
                android:layout_marginTop="148dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintEnd_toStartOf="@+id/bagright"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintEnd_toStartOf="@+id/bagright"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="216dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintEnd_toStartOf="@+id/bagright"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toEndOf="@+id/bagleft"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="360dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toEndOf="@+id/bagleft"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="490dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point8"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="530dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point9"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="570dp"
                android:background="@drawable/drawpoints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oceanmini"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/chal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginTop="372dp"
                android:background="@drawable/roundbutton"
                android:text="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal1" />

            <Button
                android:id="@+id/chal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="104dp"
                android:background="@drawable/roundbutton"
                android:text="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/chal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="250dp"
                android:layout_marginEnd="92dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/roundbutton"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/turtlegif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="228dp"
                android:layout_marginTop="524dp"
                android:src="@drawable/momseaturtle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bagleft"
                android:layout_width="110dp"
                android:layout_height="87dp"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="56dp"
                android:src="@drawable/bagleft"
                app:layout_constraintBottom_toTopOf="@+id/chal3"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/bagright"
                android:layout_width="64dp"
                android:layout_height="78dp"
                android:layout_marginEnd="68dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/bagright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cookie" />

            <ImageView
                android:id="@+id/chips"
                android:layout_width="42dp"
                android:layout_height="81dp"
                android:layout_marginBottom="60dp"
                android:layout_marginStart="150dp"
                android:rotation="45"
                android:src="@drawable/bagleft"
                app:layout_constraintBottom_toTopOf="@+id/bagleft"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/cookie"
                android:layout_width="104dp"
                android:layout_height="64dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="20dp"
                android:rotation="225"
                android:src="@drawable/bottleleft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="127dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="75dp"
                android:layout_marginTop="25dp"
                android:rotation="210"
                android:src="@drawable/bottleright"
                app:layout_constraintBottom_toTopOf="@+id/gifImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chal2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_help"
                app:backgroundTint="@color/Lightblue"
                app:fabSize="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifImageView2"
                app:rippleColor="@color/colorPrimaryDark" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonvol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@android:drawable/ic_lock_silent_mode"
                app:backgroundTint="@color/Lightblue"
                app:fabSize="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
                app:rippleColor="@color/Whitenew" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/ground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chal3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>